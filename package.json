{
  "name": "react-css-props",
  "version": "0.0.0-development",
  "description": "Dynamically turn your props into CSS clases!",
  "main": "dist/index.js",
  "scripts": {
    "commit": "git-cz",
    "test": "jest --watch",
    "test:single": "jest --coverage",
    "prebuild": "rimraf dist",
    "build": "babel --out-dir dist --ignore *.test.js index.js",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kutyel/react-css-props.git"
  },
  "keywords": [
    "react",
    "css",
    "props",
    "css modules"
  ],
  "files": [
      "dist",
      "README.md"
  ],
  "author": "Flavio Corpa RÃ­os <flaviocorpa@gmail.com> (https://github.com/kutyel)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kutyel/react-css-props/issues"
  },
  "homepage": "https://github.com/kutyel/react-css-props#readme",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-latest": "^6.16.0",
    "commitizen": "^2.8.6",
    "coveralls": "^2.11.15",
    "cz-conventional-changelog": "^1.2.0",
    "ghooks": "^1.3.2",
    "jest-cli": "^17.0.3",
    "nyc": "^10.0.0",
    "rimraf": "^2.5.4",
    "semantic-release": "^6.3.2"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "config": {
    "ghooks": {
      "pre-commit": "yarn run test:single"
    }
  }
}
