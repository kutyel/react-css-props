{
    "name": "react-css-props",
    "version": "0.0.0-semantic-release",
    "description": "Dynamically turn your props into CSS clases!",
    "main": "dist/index.js",
    "scripts": {
        "flow": "flow",
        "commit": "git-cz",
        "test:w": "jest --watch",
        "test": "jest --coverage",
        "prebuild": "rimraf dist",
        "build": "yarn run build:lib && yarn run build:flow",
        "build:lib": "babel --out-dir dist --ignore *.test.js src",
        "build:flow": "flow-copy-source -v -i *.test.js src dist",
        "report-coverage": "cat ./coverage/lcov.info | coveralls",
        "semantic-release": "semantic-release pre && npm publish && semantic-release post"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/kutyel/react-css-props.git"
    },
    "keywords": [
        "react",
        "css",
        "props",
        "flow",
        "jest",
        "yarn",
        "flowtype",
        "css modules"
    ],
    "files": [
        "dist",
        "README.md"
    ],
    "author": "Flavio Corpa RÃ­os <flaviocorpa@gmail.com> (https://github.com/kutyel)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/kutyel/react-css-props/issues"
    },
    "homepage": "https://github.com/kutyel/react-css-props#readme",
    "devDependencies": {
        "babel-cli": "^6.18.0",
        "babel-eslint": "^7.1.1",
        "babel-plugin-transform-flow-strip-types": "^6.18.0",
        "babel-preset-latest": "^6.16.0",
        "commitizen": "^2.8.6",
        "coveralls": "^2.11.15",
        "cz-conventional-changelog": "^2.0.0",
        "eslint": "^4.1.0",
        "eslint-plugin-flowtype": "^2.29.1",
        "eslint-plugin-import": "^2.2.0",
        "flow-bin": "^0.54.0",
        "flow-copy-source": "^1.1.0",
        "ghooks": "^2.0.0",
        "jest-cli": "^20.0.0",
        "rimraf": "^2.5.4",
        "semantic-release": "^7.0.1"
    },
    "jest": {
        "testEnvironment": "node",
        "coverageThreshold": {
            "global": {
                "branches": 100,
                "functions": 100,
                "lines": 100,
                "statements": 100
            }
        }
    },
    "config": {
        "ghooks": {
            "pre-commit": "yarn test && yarn flow"
        },
        "commitizen": {
            "path": "node_modules/cz-conventional-changelog"
        }
    }
}
